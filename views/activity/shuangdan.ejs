  <script>
    var ceng = document.querySelector('.ceng');
    var close = document.querySelector('.close');
    var swiper = document.querySelector('.swiper');
    init(swiper, 'ani');
    function init(ele, tag) {
      var arr = ele.children;
      if (arr.length > 3) {
        var frag = document.createElement('div');
        for (var i = 0; i < 4; i++) {
          frag.appendChild(arr[i].cloneNode(true));
        };
        frag.style.position = 'absolute';
        frag.style.left = '0';
        frag.style.top = '100%';
        frag.style.width = '100%';
        ele.appendChild(frag);
        ele.classList.add(tag);
      };
    };
    
    if (ceng) {
      ceng.addEventListener('touchmove', function(e) {
        e.preventDefault();
      }, false);
    };

    close.addEventListener('click', function() {
      ceng.style.display = 'none';
    }, false);

    
  </script>

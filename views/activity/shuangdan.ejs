      border-radius: 8px;
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 3;
    }
    .isShow {
      display: flex;
      pointer-events: none;
    }
    .want {
      color: rgba(255, 255, 255, .8);
      font-size: .65rem;
    }
    
    .gift {
      width: 5.35rem;
    }
    .tit {
      font-size: .6rem;
      color: #8a5e3b;
    }
    .tip {
      font-size: .7rem;
      color: #ffffff;
      text-align: center;
      padding-bottom: .6rem;
    }

    .user-info {
      font-size: .7rem;
      color: #ffffff;
      text-align: center;
      line-height: 1.3;
      padding-top: .5rem;
      padding-bottom: .5rem;
    }

    .banner {
      background-color: black;
      color: #ffffff;
      opacity: .25;
      width: 92%;
      height: 5rem;
      margin: 0 auto;
      text-align: center;
      font-size: .75rem;
      padding-top: .5rem;
      padding-bottom: .5rem;
      box-sizing: border-box;
      margin-bottom: .8rem;
    }
    .swiper-box {
      overflow: hidden;
      height: 100%;
    }
    .swiper {
      position: relative;
    }
    .ani {
      animation: move 15s linear infinite;
    }
    @keyframes move {
      0% {
        transform: translateY(0%);
      }
      100% {
        transform: translateY(-100%);
      }
    }

    .btn-box {
      text-align: center;
      margin-bottom: .7rem;
    }
    .btn {
      display: inline-block;
      color: #415e0e;
      width: 46%;
      height: 2rem;
      line-height: 1.8rem;
      text-align: center;
      background-image: url('/images/shuangdan/btn.png');
      font-size: .9rem;
      font-weight: 900;
    }

    .rules {
      box-sizing: border-box;
      width: 92%;
      margin: 0 auto;
      background-image: url('/images/shuangdan/rules.png');
      height: 25rem;
      color: #992021;
      padding-left: 1.2rem;
      padding-right: 1.2rem;
      padding-top: 1.8rem;
      position: relative;
    }
    .ling {
      position: absolute;
      width: 1.5rem;
      left: .8rem;
      top: 1.4rem;
    }
    .title {
      font-size: .9rem;
      text-align: center;
    }
    .line {
      font-size: .75rem;
      line-height: 1.5;
      margin-top: .4rem;
      padding-left: 1rem;
      position: relative;
    }
    .num {
      position: absolute;
      top: 0;
      left: 0;
    }

    .btns-box {
      margin-top: .5rem;
      background-color: rgba(0, 0, 0, .3);
      line-height: 2.4rem;
      height: 2.6rem;
      text-align: center;
    }

    .ceng {
      position: fixed;
      z-index: 10;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, .5);
      display: none;
    }
    .win {
      position: absolute;
      top: 50%; left: 0;
      transform: translateY(-50%);
      width: 18.75rem;
      height: 19.5rem;
      background-image: url('/images/shuangdan/win.png');
    }
    .close {

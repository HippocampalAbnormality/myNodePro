  <style>
    body {
      background-color: #BE2829;
    }
    .container {
      position: relative;
      padding-top: 10.2rem;
    }
    .bg {
      width: 100%;
      position: absolute;
      top: 0; left: 0;
      z-index: 1;
    }
    .timer, .gift-box, .gift-bg, .gift-btm, .btn, .rules, .take, .isTake, .win, .cnt-gift-box, .submit {

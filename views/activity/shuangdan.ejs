      text-align: center;
    }
    .cnt-gift-box {
      width: 3.8rem;
      height: 3.9rem;
      background-image: url('/images/shuangdan/gift-bg.png');
      margin-left: auto; 
      margin-right: auto; 
      position: relative;
      text-align: center;
      font-size: 0;
      padding-top: .5rem;
      box-sizing: border-box;
      margin-bottom: .2rem;
    }
    .cnt-gift-box > img {
      width: 3rem;
    }
    .cnt-gift-box > p {
      color: #8a5e3b;
      font-size: .4rem;
    }

    .jihuo {
      font-size: .7rem;
      color: #ffffff;
      padding-left: 2.4rem;
      text-align: left;
    }
    .lin {
